// /prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // Para desarrollo local. Luego pod√©s usar PostgreSQL.
  url      = "file:./dev.db"
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  imageUrl    String
  OrderItem   OrderItem[]
}

model Order {
  id        Int         @id @default(autoincrement())
  name      String
  email     String
  address   String
  total     Float
  createdAt DateTime    @default(now())
  items     OrderItem[]
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
}
